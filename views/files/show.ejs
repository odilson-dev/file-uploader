<!DOCTYPE html>
<html lang="en">
  <%- include('../layout/head', {title: 'File Details - FileUploader'}); -%>
  <body class="bg-gray-100 min-h-screen font-sans">
    <%- include('../layout/header'); -%>
    <!-- Main Content -->
    <main class="container mx-auto py-10 px-4 sm:px-6 lg:px-8">
      <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <div
          class="p-6 flex flex-col sm:flex-row sm:justify-between sm:items-center"
        >
          <div>
            <h2 class="text-3xl font-bold text-gray-800 mb-1">
              <%= file.name %>
            </h2>
            <p class="text-gray-500 text-sm">
              Uploaded on <%= new Date(file.createdAt).toLocaleDateString() %>
            </p>
          </div>
          <a
            href="/files/<%= file.id %>/download"
            class="mt-4 sm:mt-0 bg-indigo-700 text-white px-6 py-2 rounded-lg text-lg font-medium hover:bg-indigo-800 focus:outline-none focus:ring-2 focus:ring-indigo-500"
          >
            Download File
          </a>
        </div>

        <!-- File Information -->
        <div class="p-6 bg-gray-50 border-t border-gray-200">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- File Type -->
            <div class="flex items-center p-4 bg-white shadow-sm rounded-lg">
              <div class="p-3 bg-indigo-100 rounded-full">
                <svg
                  class="h-6 w-6 text-indigo-700"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    d="M9 3a7 7 0 100 14h2a7 7 0 100-14H9zM4 10a6 6 0 1110 4.472V15a2 2 0 11-2-2h-.528A5.978 5.978 0 014 10z"
                  />
                </svg>
              </div>
              <div class="ml-4">
                <p class="text-sm font-semibold text-gray-500">File Type</p>
                <p class="text-lg text-gray-700"><%= file.type %></p>
              </div>
            </div>

            <!-- File Size -->
            <div class="flex items-center p-4 bg-white shadow-sm rounded-lg">
              <div class="p-3 bg-indigo-100 rounded-full">
                <svg
                  class="h-6 w-6 text-indigo-700"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    d="M4 4a2 2 0 00-2 2v8a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2H4zm1 8h10V8H5v4zm10-6H5V6h10v2z"
                  />
                </svg>
              </div>
              <div class="ml-4">
                <p class="text-sm font-semibold text-gray-500">File Size</p>
                <p class="text-lg text-gray-700">
                  <%= (file.size / 1024).toFixed(2) %> KB
                </p>
              </div>
            </div>

            <!-- Last Modified -->
            <div class="flex items-center p-4 bg-white shadow-sm rounded-lg">
              <div class="p-3 bg-indigo-100 rounded-full">
                <svg
                  class="h-6 w-6 text-indigo-700"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    d="M10 3a7 7 0 00-7 7 7 7 0 007 7 7 7 0 007-7 7 7 0 00-7-7zM7 10a1 1 0 112 0v2a1 1 0 11-2 0v-2zm4 0a1 1 0 112 0v2a1 1 0 11-2 0v-2z"
                  />
                </svg>
              </div>
              <div class="ml-4">
                <p class="text-sm font-semibold text-gray-500">Last Modified</p>
                <p class="text-lg text-gray-700">
                  <%= new Date(file.updatedAt).toLocaleDateString() %>
                </p>
              </div>
            </div>

            <!-- Description -->
            <div
              class="col-span-1 md:col-span-2 lg:col-span-3 flex items-start p-4 bg-white shadow-sm rounded-lg"
            >
              <div class="p-3 bg-indigo-100 rounded-full">
                <svg
                  class="h-6 w-6 text-indigo-700"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    d="M3 3a1 1 0 011-1h12a1 1 0 011 1v14a1 1 0 01-1 1H4a1 1 0 01-1-1V3zm2 2v10h10V5H5zm2 2h6v1H7V7zm0 2h6v1H7V9zm0 2h6v1H7v-1z"
                  />
                </svg>
              </div>
              <div class="ml-4">
                <p class="text-sm font-semibold text-gray-500">Description</p>
                <p class="text-lg text-gray-700"></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <%- include('../layout/footer'); -%>
  </body>
</html>
