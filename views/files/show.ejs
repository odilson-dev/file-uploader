<!DOCTYPE html>
<html lang="en">
  <%- include('../layout/head', { title: file.name }); -%>
  <body class="bg-gray-50 min-h-screen font-sans">
    <%- include('../layout/header') -%>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto py-10 px-4">
      <div class="bg-white shadow rounded-lg overflow-hidden max-w-3xl mx-auto">
        <!-- File Header Section -->
        <div
          class="p-8 flex flex-col items-start justify-between md:flex-row md:items-center"
        >
          <div>
            <h2 class="text-2xl font-semibold text-gray-800">
              <%= file.name %>
            </h2>
            <p class="text-sm text-gray-500 mt-2">
              Uploaded on  <%= new Date(file.createdAt).toLocaleDateString('en-US', { day:
                'numeric', month: 'long', year: 'numeric' }) %>
            </p>
          </div>
          <a
            href="/files/<%= file.id %>/download"
            class="mt-4 md:mt-0 bg-indigo-600 text-white px-4 py-2 rounded-md text-sm font-semibold hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-400"
          >
            Download File
          </a>
        </div>

        <!-- File Details Section -->
        <div class="px-8 pb-8 pt-6 bg-gray-50 border-t border-gray-200">
          <div class="space-y-6">
            <!-- File Type -->
            <div class="flex items-center">
              <div
                class="w-10 h-10 bg-indigo-100 rounded-full flex items-center justify-center"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  style="fill: #4f46e5; transform: ; msfilter: "
                >
                  <path
                    d="M18 22a2 2 0 0 0 2-2V8l-6-6H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12zM13 4l5 5h-5V4zM7 8h3v2H7V8zm0 4h10v2H7v-2zm0 4h10v2H7v-2z"
                  ></path>
                </svg>
              </div>
              <div class="ml-4">
                <p class="text-sm text-gray-500">File Type</p>
                <p class="text-lg text-gray-700 font-medium">
                  <%= file.type %>
                </p>
              </div>
            </div>

            <!-- File Size -->
            <div class="flex items-center">
              <div
                class="w-10 h-10 bg-indigo-100 rounded-full flex items-center justify-center"
              >
                <svg
                  class="h-6 w-6 text-indigo-600"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path d="M4 4h16v16H4z" />
                </svg>
              </div>
              <div class="ml-4">
                <p class="text-sm text-gray-500">File Size</p>
                <p class="text-lg text-gray-700 font-medium">
                  <%= (file.size / 1024).toFixed(2) %> KB
                </p>
              </div>
            </div>

            <!-- Last Modified -->
            <div class="flex items-center">
              <div
                class="w-10 h-10 bg-indigo-100 rounded-full flex items-center justify-center"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  style="fill: #4f46e5; transform: ; msfilter: "
                >
                  <path
                    d="M12.25 2c-5.514 0-10 4.486-10 10s4.486 10 10 10 10-4.486 10-10-4.486-10-10-10zM18 13h-6.75V6h2v5H18v2z"
                  ></path>
                </svg>
              </div>
              <div class="ml-4">
                <p class="text-sm text-gray-500">Last Modified</p>
                <p class="text-lg text-gray-700 font-medium">
                 
                  <%= new Date(file.updatedAt).toLocaleDateString('en-US', { day:
                    'numeric', month: 'long', year: 'numeric' }) %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <%- include('../layout/footer') -%>
  </body>
</html>
