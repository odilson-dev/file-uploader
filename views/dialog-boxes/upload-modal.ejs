<!-- Main modal -->
<dialog
  id="upload-modal"
  tabindex="-1"
  aria-hidden="true"
  class="w-1/2 min-w-[300px] mt-24"
>
  <!-- Modal content -->
  <div class="relative bg-white rounded-lg shadow w-full">
    <!-- Modal header -->
    <div
      class="flex items-center justify-between p-4 md:p-5 border-b rounded-t"
    >
      <h3 class="text-lg text-gray-900">
        Upload to <span id="upload-parent"></span>
      </h3>
      <button
        data-modal-close="upload-modal"
        type="button"
        class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center"
      >
        <svg
          class="w-3 h-3"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 14 14"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"
          />
        </svg>
        <span class="sr-only">Close</span>
      </button>
    </div>
    <!-- Modal body -->
    <form
      action="/files/upload<%= folderId ? '/' + folderId : '' %>"
      method="POST"
      enctype="multipart/form-data"
      class="p-4"
    >
      <div
        id="file-error-container"
        class="hidden text-center p-2 mb-2 bg-red-50 border border-red-200 text-red-700 text-sm rounded-md"
      ></div>
      <div class="grid gap-4 mb-4">
        <div class="relative">
          <div id="file-name-container" class="text-center text-sm py-2 mb-2">
            <span id="file-name" class="text-gray-700">No file selected</span>
          </div>
          <input
            type="file"
            name="uploaded_file"
            id="uploaded_file"
            class="hidden"
            required
          />
          <label
            for="uploaded_file"
            class="flex flex-col justify-center items-center gap-1 bg-gray-100 border border-gray-300 text-gray-900 text-sm rounded-lg cursor-pointer p-2.5 transition duration-150 ease-in-out hover:bg-gray-200 focus-within:ring-2 focus-within:ring-blue-300"
          >
            <div class="text-gray-700 flex items-center">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-5 mr-2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5m-13.5-9L12 3m0 0 4.5 4.5M12 3v13.5"
                />
              </svg>
              Choose a file
            </div>
            <div class="italic font-light text-gray-700">
              (Max size: 10.5MB)
            </div>
          </label>
        </div>
      </div>
      <div class="flex justify-end">
        <button
          type="submit"
          class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center transition duration-150 ease-in-out"
        >
          Upload File
        </button>
      </div>
    </form>
  </div>
</dialog>
